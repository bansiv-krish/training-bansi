<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Edit Post</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
        <action method="setPageTitle">
            <argument translate="true" name="title" xsi:type="string">Edit Post</argument>
        </action>
        </referenceBlock>
        <referenceContainer name="content">
             <block class="TrainingBansi\Grid\Block\Edit" name="crud_index_edit" template="TrainingBansi_Grid::create.phtml" cacheable="false">
             <arguments>
    				<argument name="view_model" xsi:type="object">TrainingBansi\Grid\ViewModel\OptionsView</argument>
    			</arguments>
    		</block>   
        </referenceContainer>
    </body>
</page>