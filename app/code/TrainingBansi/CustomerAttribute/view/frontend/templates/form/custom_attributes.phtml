<?php
$father_name = $block->getCustomer()->getCustomAttribute('father_name');
$mother_name = $block->getCustomer()->getCustomAttribute('mother_name');
$config = $block->getLayout()->createBlock(\Magento\Config\Block\System\Config\Form::class);
$show_father_name=$config->getConfigValue('customAttrSection/customAttrGroup/show_father_name');
